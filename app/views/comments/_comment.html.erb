<div class="comment">
  <div class="content">
    <%= link_to comment.user.full_name, user_posts_path(comment.user), class: 'author' %>
    <div class="metadata">
      <div class="date"><%= time_ago_in_words(comment.created_at) %></div>
      <% if owner?(comment) %>
        <%= link_to edit_comment_path(comment), class: 'ui basic icon button link small teal' do %>
          <i class="icon edit"></i>
        <% end %>
        <%= link_to comment_path(comment), class: 'ui basic icon button link small red', method: :delete do %>
          <i class="trash alternate outline icon"></i>
        <% end %>
      <% end %>
    </div>
    <div class="text">
      <%= comment.content %>
    </div>
    <div class="actions">
      <%= like_button comment, type: :link %>
      <%= dislike_button comment, type: :link %>
    </div>
  </div>
</div>
