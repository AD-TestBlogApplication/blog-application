<div class="ui middle aligned center aligned grid devise request-password-reset-form">
  <div class="column">
    <h2 class="ui image header">
      <%= link_to root_path, class: 'image' do %>
        <%= image_tag 'logo.svg', class: 'image' %>
      <% end %>
      <div class="content">
        Forgot your password?
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form large' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit 'Send me reset password instructions', class: 'ui submit button' %>
      </div>
    <% end %>

    <div class="ui horizontal divider">
      Or
    </div>

    <%= link_to "Log in", new_session_path(resource_name), class: 'ui submit button' %>
  </div>
</div>
