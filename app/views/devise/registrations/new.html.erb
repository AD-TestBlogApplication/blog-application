<div class="ui middle aligned center aligned grid devise sign-up-form">
  <div class="column">
    <h2 class="ui image header">
      <%= link_to root_path, class: 'image' do %>
        <%= image_tag 'logo.svg', class: 'image' %>
      <% end %>
      <div class="content">
        Sign up
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form large' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email' %>
      </div>

      <div class="field">
        <label>Name</label>
        <div class="two fields">
          <div class="field">
            <%= f.email_field :first_name, placeholder: 'First name' %>
          </div>
          <div class="field">
            <%= f.email_field :last_name, placeholder: 'Last name' %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Password confirmation' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'ui submit button' %>
      </div>
    <% end %>

    <div class="ui horizontal divider">
      Or
    </div>

    <%= link_to "Log in", new_session_path(resource_name), class: 'ui submit button' %>
  </div>
</div>
