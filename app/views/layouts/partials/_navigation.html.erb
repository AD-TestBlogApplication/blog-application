<div class="ui borderless main menu" id='main-navigation'>
  <div class="ui text container">
    <%= link_to root_path, class: 'header item' do %>
      <%= image_tag 'logo.svg', class: 'logo' %>
    <% end %>
    <%= link_to 'Posts', posts_path, class: 'item' %>
    <% if current_user %>
      <div class="ui right floated dropdown item">
        <i class="user icon"></i>
        <%= current_user.first_name %>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to 'My posts', user_posts_path(current_user), class: 'item' %>
          <%= link_to 'Sign Out', destroy_user_session_path, class: 'item', method: :delete %>
        </div>
      </div>
    <% else %>
      <div class="floated right item">
        <%= link_to 'Sign in', new_user_session_path, class: 'ui primary button' %>
      </div>
    <% end %>
  </div>
</div>
