<%= render partial: 'header' %>

<%= link_to posts_path, class: 'ui labeled icon button' do %>
  <i class="arrow left icon"></i>
  Back
<% end %>
<% if owner?(@post) %>
  <%= link_to edit_post_path(@post), class: 'ui labeled icon button' do %>
    <i class="edit icon"></i>
    Edit
  <% end %>
  <%= link_to post_path(@post), class: 'ui labeled icon button', method: :delete do %>
    <i class="trash alternate outline icon"></i>
    Delete
  <% end %>
<% end %>

<%= render @post %>
<%= render partial: 'emote_reactions/likes_bar', locals: { emotionable: @post } %>
<%= render partial: 'comments/comments', locals: { commentable: @post } %>
